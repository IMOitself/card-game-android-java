<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#303030"
	android:gravity="center"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1.0"
		android:gravity="center"
		android:orientation="vertical">

		<TextView
			android:id="@+id/title_txt"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="1.0"
			android:gravity="bottom|center_horizontal"
			android:text="0"
			android:textColor="#979797" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:baselineAligned="false"
			android:gravity="center"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/player_layout"
				android:layout_width="140dp"
				android:layout_height="140dp"
				android:layout_margin="10dp"
				android:background="#696969"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="8dp"
				android:scaleX="1.05"
				android:scaleY="1.05">

				<TextView
					android:id="@+id/player_lives_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="❤00"
					android:textColor="#FFFFFF"
					android:textSize="25sp"
					android:textStyle="bold" />

				<ImageView
					android:layout_width="70dp"
					android:layout_height="70dp"
					android:src="@drawable/dude_with_sword" />

				<TextView
					android:id="@+id/player_energy_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="⚡■■■■■"
					android:textColor="#FFFFFF"
					android:textSize="16sp"
					android:textStyle="bold" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_weight="4.0"
				android:orientation="horizontal" />

			<LinearLayout
				android:id="@+id/enemy_layout"
				android:layout_width="140dp"
				android:layout_height="140dp"
				android:layout_margin="10dp"
				android:background="#696969"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="8dp">

				<TextView
					android:id="@+id/enemy_lives_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="❤00"
					android:textColor="#FFFFFF"
					android:textSize="25sp"
					android:textStyle="bold" />

				<ImageView
					android:layout_width="70dp"
					android:layout_height="70dp"
					android:src="@drawable/guy_with_sword_too" />

				<TextView
					android:id="@+id/enemy_energy_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="⚡■■■■■"
					android:textColor="#FFFFFF"
					android:textSize="16sp"
					android:textStyle="bold" />

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/moves_img"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="10dp"
				android:scaleType="fitCenter"
				android:src="@drawable/sand_clock" />

			<TextView
				android:id="@+id/moves_txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="00"
				android:textColor="#D0D0D0"
				android:textSize="34sp" />

		</LinearLayout>

		<TextView
			android:id="@+id/card_name_txt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="MEGA ATTACK"
			android:textColor="#939393"
			android:textSize="25sp" />

		<LinearLayout
			android:id="@+id/cardParentLayout"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="1.0"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/card_layout"
				android:layout_width="130dp"
				android:layout_height="130dp"
				android:background="#FFFFFF"
				android:gravity="center"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="0.5"
					android:background="#696969"
					android:gravity="center"
					android:orientation="vertical">

					<ImageView
						android:id="@+id/card_type_img"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:scaleType="fitCenter"
						android:src="@drawable/mega_attack_type" />

					<TextView
						android:id="@+id/card_cost_txt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:lines="1"
						android:text="■■■■■"
						android:textColor="#FFFFFF"
						android:textSize="16sp"
						android:textStyle="bold" />

				</LinearLayout>

				<TextView
					android:id="@+id/card_info_txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginBottom="10dp"
					android:layout_weight="3"
					android:gravity="center"
					android:text="🔪5"
					android:textColor="#696969"
					android:textSize="20sp"
					android:textStyle="bold" />

			</LinearLayout>

			<LinearLayout
				android:id="@+id/card_back_layout"
				android:layout_width="130dp"
				android:layout_height="130dp"
				android:background="#696969"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="10dp">

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/notice"
		android:textColor="#939393"
		android:lines="2"
		android:id="@+id/debug_txt"
		android:textSize="12sp"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="70dp"
		android:id="@+id/buttons_layout">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="SKIP"
			android:id="@+id/skip_btn"
			android:layout_weight="1.0"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="USE"
			android:id="@+id/use_btn"
			android:layout_weight="1.0"/>

	</LinearLayout>

</LinearLayout>
